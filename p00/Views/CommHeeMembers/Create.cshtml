@model p00.Models.CommHeeMembers

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>اضافة</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="card card-warning">
    <h4 class="card-title">اعضاء اللجان</h4>
    <hr />
    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Teacherid, "الاستاذ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Teacherid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Teacherid, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CommitHees.comitname, "اللجنة المنتمي اليها", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CommitHeesid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CommitHees.comitname, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="اضافة" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("الرجوع الى القائمة", "Index")
</div>

@model IEnumerable<p00.Models.CommHeeMembers>

@{
    ViewBag.Title = "اعضاء اللجان";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <h2>@ViewBag.Title</h2>

<p>
    <button class="btn btn-outline-success">  @Html.ActionLink("اضافة", "Create")</button>
</p>
<div>
    <div>
        <div>
            <h3 class="box-title">قائمة الاساتذة</h3>
        </div><!-- /.box-header -->
        <div>
            <table id="example1" class="table table-bordered table-hover">
                <thead>
                    <tr class="bg-warning">
                        <th>
                            @Html.DisplayNameFor(model => model.CommitHees.comitname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Teacher.FullName)
                        </th>
                       
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CommitHees.comitname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Teacher.FullName)
                            </td>
                           
                            <td>
                                @Html.ActionLink("تعديل", "Edit", new { id = item.Id },htmlAttributes: new { @class="btn btn-primary"}) |
                                
                                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


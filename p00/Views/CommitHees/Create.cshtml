@model p00.Models.CommitHees

@{
    ViewBag.Title = "انشاء لجنة جديدة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <h2>اللجان</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div style=" margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */" class="col-10 card card-primary col-xs-10  ">
    <div class="card-header">
        <h3 class="card-title float-lg-none">@ViewBag.Title</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.comitname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comitname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comitname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comitDecipt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.comitDecipt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comitDecipt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comitpriod, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.comitpriod, new SelectList(ViewBag.list1), "Select", htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.comitpriod, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.comitpriod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comittype, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.comittype, new SelectList(ViewBag.list2), "Select", htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.comittype, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.comittype, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.isActive)
                    @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="انشاء" class="btn btn-primary" />
            </div>
        </div>
        <div class="mb-5 btn btn-link" >
            @Html.ActionLink("الرجوع الى القائمة", "Index")
        </div>
    </form>
</div>
}



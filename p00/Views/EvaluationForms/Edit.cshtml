@model p00.Models.EvaluationFormViewModel

@{
    ViewBag.Title = "اضافة المحاور";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>اضافة</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>المحاور</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.year, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.iscurent, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.iscurent)
                @Html.ValidationMessageFor(model => model.iscurent, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    


    <div class="card card-warning">
        <h3 class="card-header col-lg-12">   @Html.LabelFor(model => model.Sections, "المحاور التي تخص هذه الاستمارة", htmlAttributes: new { @class = "control-label col-md-2" }) </h3>
        <div class="col-md-10 checkbox">
            @for (int i = 0; i < Model.Sections.Count(); i++)
            {
                @Html.EditorFor(m => Model.Sections[i].Checked)
                @Html.DisplayFor(m => Model.Sections[i].SectionName)

                @Html.HiddenFor(m => Model.Sections[i].SectionName)
                @Html.HiddenFor(m => Model.Sections[i].Id)

                <br />
                <br />
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-outline-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("الرجوع الى القائمة", "Index")
</div>

@model IEnumerable<p00.Models.CheckedTeachersViewModel>
@using Microsoft.AspNet.Identity
@using p00.Models;
@using WebApplication2.Models;
@{
    ViewBag.Title = "حذف استاذ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script src="~/Scripts/EmployeeReport.js"></script>


@*<button id="btnGenerate">loed</button>*@
<div style=" margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */" class="col-10 card card-primary col-xs-10  ">

    <!-- /.card-header -->
    <!-- form start -->

    <div class="col-12">
        <div class="card card-warning">
            <div class="card-title">
                <h2>قوائم الاساتذه المشولين بالتقييم في الاستماره الحاليه</h2>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table id="example1" class="table table-bordered table-hover">

                    <thead class="bg-warning">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.University)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.College)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Department)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ScientificTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Check)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.University)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.College)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ScientificTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Check)
                                </td>
                                <td>
                                    @Html.ActionLink("حذف من الاستماره", "DeleteTeacherTheTopicEV", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}
